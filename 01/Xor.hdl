/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
	Not(in= a, out=Nota);
	Not(in= b, out=Notb);
	Nand(a= b, b= Nota, out= FirstNand);
	Nand(a= a, b= Notb, out= SecondNand);
	Nand(a= FirstNand, b= SecondNand, out= out);
}